{{ 'section-category-tiles.css' | asset_url | stylesheet_tag }}

<div class="category-tiles color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="section-header center">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">{{ section.settings.title }}</h2>
      </div>
    {%- endif -%}

    <div class="category-tiles__grid grid grid--2-col-tablet grid--4-col-desktop">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link }}" class="category-tile media-wrapper" {{ block.shopify_attributes }}>
          <div class="category-tile__image media media--square">
            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', widths: '300, 600, 800' }}
            {%- else -%}
              {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
          <div class="category-tile__content">
            <h3 class="category-tile__heading h5">{{ block.settings.heading | escape }}</h3>
          </div>
          <div class="category-tile__overlay"></div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Category Tiles",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Shop by Category"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1",
      "label": "Heading Size"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Label",
          "default": "Category Name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Tiles",
      "blocks": [
        { "type": "category", "settings": { "heading": "Phone Cases" } },
        { "type": "category", "settings": { "heading": "Chargers" } },
        { "type": "category", "settings": { "heading": "Audio" } },
        { "type": "category", "settings": { "heading": "Accessories" } }
      ]
    }
  ]
}
{% endschema %}
