{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}

<div class="testimonials color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="section-header center">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">{{ section.settings.title }}</h2>
      </div>
    {%- endif -%}

    <div class="testimonials__slider">
      {%- for block in section.blocks -%}
        <div class="testimonial-card color-{{ section.settings.card_color_scheme }}" {{ block.shopify_attributes }}>
          <div class="testimonial__stars">
            {%- for i in (1..block.settings.rating) -%}
              <span class="star-icon">â˜…</span>
            {%- endfor -%}
          </div>
          <blockquote class="testimonial__text h4">"{{ block.settings.text | escape }}"</blockquote>
          <div class="testimonial__author">
            <span class="testimonial__name">{{ block.settings.author | escape }}</span>
            {%- if block.settings.verified -%}
              <span class="testimonial__verified" title="Verified Customer">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                Verified
              </span>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "What Our Customers Say"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1",
      "label": "Heading Size"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Section Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "card_color_scheme",
      "label": "Card Color Scheme",
      "default": "scheme-2"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "Rating",
          "default": 5
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Review",
          "default": "Amazing quality and fast shipping! Will definitely buy again."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "John D."
        },
        {
          "type": "checkbox",
          "id": "verified",
          "label": "Verified Badge",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        { "type": "testimonial" },
        { "type": "testimonial" },
        { "type": "testimonial" }
      ]
    }
  ]
}
{% endschema %}
