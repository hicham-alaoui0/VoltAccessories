{{ 'section-trust-bar.css' | asset_url | stylesheet_tag }}

<div class="trust-bar color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <div class="trust-bar__grid">
      {%- for block in section.blocks -%}
        <div class="trust-bar__item" {{ block.shopify_attributes }}>
          {%- if block.settings.icon_svg != blank -%}
            <span class="trust-bar__icon">
              {{ block.settings.icon_svg }}
            </span>
          {%- endif -%}
          <div class="trust-bar__content">
            <p class="trust-bar__text h6">{{ block.settings.text | escape }}</p>
            {%- if block.settings.subtext != blank -%}
              <p class="trust-bar__subtext">{{ block.settings.subtext | escape }}</p>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Trust Bar",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Trust Item",
      "settings": [
        {
          "type": "html",
          "id": "icon_svg",
          "label": "Icon (SVG)",
          "info": "Paste SVG code here. Width/Height will be controlled by CSS."
        },
        {
          "type": "text",
          "id": "text",
          "label": "Heading",
          "default": "Free Shipping"
        },
        {
          "type": "text",
          "id": "subtext",
          "label": "Subheading",
          "default": "On orders over $50"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Bar",
      "blocks": [
        {
          "type": "column",
          "settings": {
            "text": "Free Shipping",
            "subtext": "On all orders"
          }
        },
        {
          "type": "column",
          "settings": {
            "text": "Secure Checkout",
            "subtext": "256-bit encryption"
          }
        },
        {
          "type": "column",
          "settings": {
            "text": "Premium Quality",
            "subtext": "Certified accessories"
          }
        }
      ]
    }
  ]
}
{% endschema %}
